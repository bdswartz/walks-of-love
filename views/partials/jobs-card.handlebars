<div class="jobs">
{{#each this}}
<div class="card mb-2">
    <div class="card-body">
        <h4 class="card-title">{{ owner.first_name }} {{ owner.last_name }}</h5>
        <h5 class="card-text">Pet: {{ pet.pet_name }}</h5>
        <h5 class="card-subtitle">Visit: {{#if walk }}Walk{{/if}}{{#if check_in }}Check-In{{/if}}</h6>
        <h5 class="card-text">Pay: {{ this.pay }}</h5>
        <h6 class="card-text text-muted">Time: {{ this.timeframe }}</h6>
        <h6 class="card-text text-muted">Location: {{ this.location }}</h6>
        {{#if ../isWalker}}
        {{!-- {{#unless completed}} --}}
        <button id="complete-job" class="float-right btn success" type="button">Complete</button>
        {{!-- {{/unless}} --}}
        {{/if}}
        {{#if ../isOwner}}
        {{!-- {{#unless completed}} --}}
        <button id="delete-job" class="float-right btn success" type="button">Delete</button>
        {{!-- {{/unless}} --}}
        {{/if}}
    </div>
</div>
{{/each}}
</div>




